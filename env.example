# InfluxDB Configuration
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=password123
INFLUXDB_ORG=bandwidth-monitor
INFLUXDB_BUCKET=bandwidth-metrics
INFLUXDB_TOKEN=your-influxdb-token-here

# Redis Configuration
REDIS_URL=redis://redis:6379

# SendGrid Configuration (for email notifications)
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_TO_EMAIL=alerts@yourdomain.com

# Web Push Configuration (for browser notifications)
VAPID_PUBLIC_KEY=your-vapid-public-key-here
VAPID_PRIVATE_KEY=your-vapid-private-key-here

# Application Configuration
NODE_ENV=production
PORT=4000
FRONTEND_PORT=3000

# Drop Detection Configuration
DROP_THRESHOLD_MBPS=10
DROP_DETECTION_WINDOW_SECONDS=10
DROP_DURATION_THRESHOLD_SECONDS=2
ALERT_ADVANCE_MINUTES=5

# Speed Test Configuration
SPEED_TEST_INTERVAL_MS=1000 